{% extends 'base.html.twig' %}
{% block title %}Registration{% endblock %}
{% block body %}

     <div class="container">
        <div class="row m-5">
            <div class="col-lg-4"></div>
            <div class="col-lg-4 border p-5">
                    <h2 class="text-primary">Create account</h2>
                    {{ form_start(form) }}

                    <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email, {'attr': {'placeholder': 'Enter email'}}) }}
                    </div>

                    {# <div class="form-group">
                        {{ form_label(form.password) }}
                        {{ form_widget(form.password, {'attr': {'placeholder': 'Password'}}) }}
                        <small class="form-text text-muted">Password must be at least 8 characters.</small>
                    </div> #}
                   
                   <div class="form-group">
                        {{ form_label(form.password.first) }}
                        {{ form_widget(form.password.first , {'attr': {'placeholder': 'Password', 'pattern': '/[a-zA-Z]{6}[0-9]{1}[#?!@$%^&*-]{1}/', 'max_length': 8}}) }}
                    </div>

                    {# , {'attr': {'placeholder': 'Password', 'pattern': '/[a-zA-Z]{6}[0-9]{1}[#?!@$%^&*-]{1}/', 'max_length': 8}} #}

                    <div class="form-group">
                        {{ form_label(form.password.second) }}
                        {{ form_widget(form.password.second, {'attr': {'placeholder': 'Repeat password', 'pattern': '/[a-zA-Z]{6}[0-9]{1}[#?!@$%^&*-]{1}/', 'max_length': 8}}) }}
                    </div>

                    {# , {'attr': {'placeholder': 'Repeat password', 'pattern': '/[a-zA-Z]{6}[0-9]{1}[#?!@$%^&*-]{1}/', 'max_length': 8}} #}
                    <div class="form-group">
                        {{ form_label(form.role) }}
                        {{ form_widget(form.role) }}
                    </div>

                    <button type="submit" class="btn btn-success">Create your IMDb account</button>

                    {{ form_end(form) }}

                    <div class="form-group">
                       {# <span>Already have an account <a href="{{ path('loginPage') }}">Signin-></a></span>
                       <span>Admin <a target="_blank" href="{{ path('loginPage') }}">Login-></a></span> #}

                        <div class="d-flex justify-content-between">
                            <span>Already have an account</span>
                            <span><a href="{{ path('loginPage') }}" target="_blank">Signin</a></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <span>Admin</span>
                            <span><a href="{{ path('loginPage') }}" target="_blank">Login</a></span>
                        </div>

                    </div>
            </div>
            <div class="col-lg-4"></div>
        </div>
    </div>

{% endblock %}