{% extends 'base.html.twig' %}

{% block title %}Login Page Title{% endblock %}

{% block body %}

     <div class="container">
        <div class="row m-5">
            <div class="col-lg-4"></div>
            <div class="col-lg-4 border p-5">
                    <h2 class="text-primary">Sign in </h2>
                    {{ form_start(loginForm) }}

                    <div class="form-group">
                        {{ form_label(loginForm.email) }}
                        {{ form_widget(loginForm.email, {'attr': {'placeholder': 'Enter email'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(loginForm.password) }}
                        {{ form_widget(loginForm.password, {'attr': {'placeholder': 'Password'}}) }}
                        
                        {# <small class="form-text text-muted">Password must be at least 8 characters.</small> #}

                    </div>
                 
                    <button type="submit" class="btn btn-success">Sign in</button>
                    {{ form_end(loginForm) }}
                   
            </div>
            <div class="col-lg-4"></div>
        </div>
    </div>

{% endblock %}